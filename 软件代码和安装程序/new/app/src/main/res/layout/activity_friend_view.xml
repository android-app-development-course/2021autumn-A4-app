<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Friend_View">

    <LinearLayout
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/main">
        <!--标题栏-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="20dp"
            android:paddingTop="11dp">
            <ImageButton
                android:id="@+id/friend_mes_back_button"
                android:layout_gravity="center_vertical"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:background="@drawable/back_grey"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="8"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="8dp">
            <Button
                android:id="@+id/goto_friendlist"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="好友"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/goto_friend_message"
                android:background="#00000000"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="消息"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:weightSum="13"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="12">
            <EditText
                android:id="@+id/friendview_id_edt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#454545"
                android:textColorHint="@color/gray"
                android:hint="输入ID添加好友"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageButton
                android:id="@+id/friendview_find_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/search"
                />
        </LinearLayout>

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fri_view_lv"/>

