<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HeadPage"
    android:background="#ece5d2">


    <ImageView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/head" />

    <ImageButton
        android:id="@+id/chat"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/chat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="首页"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="normal" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_below="@id/chat"
        android:layout_marginTop="20dp"
        android:background="@drawable/headpic" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/toclass"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/tag4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="在线自习"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/toshop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/tag3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:text="商 店"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tofriend"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/tag2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="我的好友"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/tomine"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/tag1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="个人主页"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/l1" />

    <!-- 先不要home建
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#f1eae6" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/home"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp"/>
        -->


</RelativeLayout>